<CameraS>
    text: it
    BoxLayout:
        padding:50
        spacing:10
        orientation: 'vertical'
        Camera:
            play: True
        Button:
            id: it
            text: 'Запомнить лицо'
            font_size: 15
            size_hint: 1, 0.15
            on_press:
                root.change_text_temp()
                app.set_face()
                root.manager.current = app.back
        Button:
            text: 'Назад'
            size_hint: 1, 0.15
            font_size: 15
            on_press:
                root.manager.current = app.back
