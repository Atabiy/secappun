<PinCodeS>

    pincode_text: pin

    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        padding: 50
        spacing: 10

        Label:
            id: pin
            text: 'PINCODE'
            font_size: 15
            size_hint: (1, 0.2)
        GridLayout:
            cols:3
            Button:
                text: '1'
                on_press: root.add_number(1)
            Button:
                text: '2'
                on_press: root.add_number(2)
            Button:
                text: '3'
                on_press: root.add_number(3)
            Button:
                text: '4'
                on_press: root.add_number(4)
            Button:
                text: '5'
                on_press: root.add_number(5)
            Button:
                text: '6'
                on_press: root.add_number(6)
            Button:
                text: '7'
                on_press: root.add_number(7)
            Button:
                text: '8'
                on_press: root.add_number(8)
            Button:
                text: '9'
                on_press: root.add_number(9)
            Button:
                text: 'DEL'
                on_press: root.delit()
            Button:
                text: '0'
                on_press: root.add_number(0)
            Button:
                text: 'OK'
                on_press:
                    app.set_pincode(root.pincode_text.text)
                    root.clear()
        Button:
            text: 'Назад'
            font_size:15
            size_hint:(1, 0.25)
            on_press:
                root.clear()
                root.manager.transition.direction = 'right'
                root.manager.current = root.go_back()
<PasswordS>
    ti1:ti1
    ti2:ti2
    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        padding: 50
        spacing: 10
        TextInput:
            id: ti1
            hint_text: 'Придумайте пароль'
            multiline: False
        TextInput:
            id: ti2
            hint_text: 'Подтвердите пароль'
            multiline: False
        Button:
            text: 'Принять'
            font_size: 15
            size_hint: (1, 0.15)
            on_press:
                app.set_pass(root.is_valid(ti1, ti2), ti1.text)
                root.clear_text()
        Button:
            text: 'Назад'
            font_size: 15
            size_hint: (1, 0.15)
            on_press:
                root.clear_text()
                root.manager.transition.direction = 'right'
                root.manager.current = root.go_back()
