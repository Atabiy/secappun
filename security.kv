
<Settings>
    BoxLayout:
        size: root.width, root.height
        padding: 50
        spacing: 10
        orientation: 'vertical'
        Label:
            text: 'МЕНЮ'
            size_hint: (1, 0.25)
            font_size: 15
        BoxLayout:
            orientation: 'vertical'
            spacing: 5
            Button:
                text:'Простые настройки'
                font_size: 15
                on_press: root.manager.current = 'SimpleSettings'
            Button:
                text: 'Продвинутые настройки'
                font_size: 15
                on_press: root.manager.current = 'AdvancedSettings'
            Button:
                text: 'Защитить данные'
                font_size: 15
<SimpleSettings>
    BoxLayout:
        size: root.width, root.height
        padding: 50
        spacing: 10
        orientation: 'vertical'
        Label:
            text: 'Выберите первый фактор защиты'
            font_size: 25
            size_hint: (1, 0.25)
        GridLayout:
            cols: 2
            spacing: 5
            Button:
                text: 'ПИН-КОД'
                font_size: 25
                on_press: root.manager.current = 'PinCodeS'
            CheckBox:
                group: '1-st step'
                size_hint: (0.1, 1)
            Button:
                text: 'ПАРОЛЬ'
                font_size: 25
                on_press: root.manager.current = 'PasswordS'
            CheckBox:
                group: '1-st step'
                size_hint: (0.1, 1)
        Button:
            text: 'Далее'
            font_size: 25
            size_hint: (1, 0.15)
            on_press: root.manager.current = 'SimpleSettings1'
        Button:
            text: 'Назад'
            font_size: 25
            size_hint: (1, 0.15)
            on_press:
                app.clear_data()
                root.manager.transition.direction = 'right'
                root.manager.current = 'Settings'
